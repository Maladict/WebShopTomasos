@model List<AspNetTomasosPizzeria1_0.Models.Matratt>

<div class="well col-md-6" id="tableWell">
    <div>
        <a class="btn btn-default" asp-controller="Admin" asp-action="CreateFoodItem"><span class="glyphicon glyphicon-plus"></span></a>
    </div>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Benämning</th>
            <th>Pris</th>
        </tr>
        </thead>
        @foreach (var matratt in Model)
        {
            <tr>
                <td class="block">@matratt.MatrattNamn</td>
                <td>@matratt.Pris</td>
                <td>
                    <a class="btn btn-default"asp-controller="Admin" asp-action="UpdateFoodItem" asp-route-id=@matratt.MatrattId><span class="glyphicon glyphicon-pencil"></span></a>
                    <a class="btn btn-default"asp-controller="Admin" asp-action="DeleteFoodItem" asp-route-id=@matratt.MatrattId><span class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        }
    </table>
    
    <div>
        <a class="btn btn-default" asp-action="Index" asp-controller="Admin">Tillbaka</a>
    </div>
</div>
